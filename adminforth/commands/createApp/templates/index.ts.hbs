import express from 'express';
import AdminForth, { Filters } from 'adminforth';
import usersResource from "./resources/users";

const ADMIN_BASE_URL = '';

export const admin = new AdminForth({
  baseUrl: ADMIN_BASE_URL,
  auth: {
    usersResourceId: 'users',
    usernameField: 'email',
    passwordHashField: 'password_hash',
    rememberMeDays: 30,
    loginBackgroundImage: 'https://images.unsplash.com/photo-1534239697798-120952b76f2b?q=80&w=3389&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    loginBackgroundPosition: '1/2',
    demoCredentials: "adminforth:adminforth",
    loginPromptHTML: "Use email <b>adminforth</b> and password <b>adminforth</b> to login",
  },
  customization: {
    brandName: "{{appName}}",
    title: "{{appName}}",
    favicon: '@@/assets/favicon.png',
    brandLogo: '@@/assets/logo.svg',
    datesFormat: 'DD MMM',
    timeFormat: 'HH:mm a',
    showBrandNameInSidebar: true,
    styles: {
      colors: {
        light: {
          primary: '#B400B8',
          sidebar: { main:'#571E58', text:'white' },
        },
        dark: {
          primary: '#82ACFF',
          sidebar: { main:'#1f2937', text:'#9ca3af' },
        }
      }
    },
  },
  dataSources: [
    {
      id: 'maindb',
      url: `${process.env.DATABASE_URL}`
    },
  ],
  resources: [
    usersResource
  ],
  menu: [
    { type: 'heading', label: 'SYSTEM' },
    {
      label: 'Users',
      icon: 'flowbite:user-solid',
      resourceId: 'users'
    }
  ],
});

if (import.meta.url === `file://${process.argv[1]}`) {
  const app = express();
  app.use(express.json());

  const port = 3500;

  await admin.bundleNow({ hotReload: process.env.NODE_ENV === 'development' });
  console.log('Bundling AdminForth done. For faster serving consider calling bundleNow() from a build script.');

  admin.express.serve(app)

  admin.discoverDatabases().then(async () => {
    if (!await admin.resource('users').get([Filters.EQ('email', 'adminforth')])) {
      await admin.resource('users').create({
        email: 'adminforth',
        password_hash: await AdminForth.Utils.generatePasswordHash('adminforth'),
        role: 'superadmin',
      });
    }
  });

  admin.express.listen(port, () => {
    console.log(`Example app listening at http://localhost:${port}`);
    console.log(`\nâš¡ AdminForth is available at http://localhost:${port}${ADMIN_BASE_URL}\n`);
  });
}
