generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("SQLITE_FILE_URL")
}

model adminuser {
  id            String     @id
  email         String     @unique
  password_hash String
  role          String
  created_at    DateTime
  secret2fa     String?

}

model cars {
  id             String @id
  model          String 
  price          Float
  created_at     DateTime @default(now())

  engine_type    String?
  engine_power   Int?
  production_year Int?

  description    String? 
  listed         Boolean @default(false)
  mileage        Float?
  color          String?
  body_type      String?

  photos         String?

  seller_id      String?
  seller         String?

}

model audit_logs {
  id                String      @id
  created_at        DateTime
  resource_id       String
  user_id           String
  action            String
  diff              String?
  record_id         String?
  ip_address        String? 
}

  model passkeys {
    id                      String @id
    credential_id           String  
    user_id                 String
    meta                    String
    @@index([user_id])
    @@index([credential_id])
  }